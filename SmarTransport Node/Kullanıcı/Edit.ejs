                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="isim">isim</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" id="isim" name="isim" type="text" value="<%-KullanıcıData[0].isim%>" />
                        <span class="field-validation-valid text-danger" data-valmsg-for="isim" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="soyisim">soyisim</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" id="soyisim" name="soyisim" type="text" value="<%-KullanıcıData[0].soyisim%>" />
                        <span class="field-validation-valid text-danger" data-valmsg-for="soyisim" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="telefon">telefon</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" id="telefon" name="telefon" type="text" value="<%-KullanıcıData[0].telefon%>" />
                        <span class="field-validation-valid text-danger" data-valmsg-for="telefon" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="adres">adres</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" id="adres" name="adres" type="text" value="<%-KullanıcıData[0].adres%>" />
                        <span class="field-validation-valid text-danger" data-valmsg-for="adres" data-valmsg-replace="true"></span>
                    </div>
                </div>


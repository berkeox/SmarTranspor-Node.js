                    <label class="control-label col-md-2" for="cinsiyet">cinsiyet</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" id="cinsiyet" name="cinsiyet" type="text" value="<%-KullanıcıData[0].cinsiyet%>" />
                        <span class="field-validation-valid text-danger" data-valmsg-for="cinsiyet" data-valmsg-replace="true"></span>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-default" />
                    </div>
                </div>

<form action="/Kullanici/Edit/submit/<%-KullanıcıData[0].ID%>" method="post">
           <div class="form-horizontal">
                <br>                
                <input data-val="true" data-val-number="The field ID must be a number." data-val-required="ID alanı gereklidir." id="ID" name="ID" type="hidden" value="6" />
                <div class="form-group">
                    <label class="control-label col-md-2" for="email">email</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" id="email" name="email" type="text" value="<%-KullanıcıData[0].email%>" />
